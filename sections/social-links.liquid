{% liquid
  assign background_color = section.settings.background_color | default: '#FFFFFF'
  assign icon_size = section.settings.icon_size | default: 380
  assign alignment = section.settings.alignment | default: 'start'
%}

<div class="social-links-wrapper{% if section.settings.full_width == false %} section{% endif %}" style="background-color: {{ background_color }};" {{ section.shopify_attributes }}>
  <div class="social-links-container">
    {% if section.settings.heading != blank %}
      <h2 class="social-links-heading" style="text-align: {{ alignment }};">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="social-links-grid" style="justify-content: {{ alignment }};">
        {% for block in section.blocks %}
          {% if block.type == 'social_link' %}
            {% if block.settings.link_url != blank %}
              <a 
                href="{{ block.settings.link_url }}" 
                class="social-link-item" 
                target="_blank" 
                rel="noopener noreferrer"
                aria-label="{{ block.settings.link_label | default: 'Social link' }}"
                {{ block.shopify_attributes }}
              >
                {% if block.settings.link_image != blank %}
                  {{
                    block.settings.link_image
                    | image_url: width: icon_size | times: 2
                    | image_tag: loading: 'lazy', class: 'social-link-image', alt: block.settings.link_label | default: 'Social icon'
                  }}
                {% else %}
                  <div class="social-link-placeholder"">
                    {{ 'image' | placeholder_svg_tag: 'social-placeholder' }}
                  </div>
                {% endif %}
                
                {% if block.settings.link_label != blank %}
                  <span class="social-link-label">{{ block.settings.link_label }}</span>
                {% endif %}
              </a>
            {% else %}
              <div class="social-link-item social-link-item--no-link" {{ block.shopify_attributes }}>
                {% if block.settings.link_image != blank %}
                {{
                    block.settings.link_image
                    | image_url: width: icon_size
                    | image_tag:
                        loading: 'lazy',
                        class: 'social-link-image',
                        alt: block.settings.link_label | default: 'Social icon'
                }}
                {% else %}
                <div class="social-link-placeholder"
                    style="width: {{ icon_size }}px; height: {{ icon_size }}px;">
                    {{ 'image' | placeholder_svg_tag }}
                </div>
                {% endif %}
              </div>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="social-links-empty">
        <p>Add social link blocks to display social media icons</p>
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  #shopify-section-{{ section.id }} .social-links-wrapper {
    width: 100%;
    padding: {{ section.settings.padding_top | default: 60 }}px 20px {{ section.settings.padding_bottom | default: 60 }}px;
    position: relative;
  }

  #shopify-section-{{ section.id }} .social-links-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  #shopify-section-{{ section.id }} .social-links-heading {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 30px;
    color: #000000;
  }

  #shopify-section-{{ section.id }} .social-links-grid {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  #shopify-section-{{ section.id }} .social-link-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    transition: transform 0.3s ease, opacity 0.3s ease;
    cursor: pointer;
    width: 380px;
    height: 380px;
  }

  #shopify-section-{{ section.id }} .social-link-item:hover {
    transform: translateY(-5px);
    opacity: 0.8;
  }

  #shopify-section-{{ section.id }} .social-link-item--no-link {
    cursor: default;
  }

  #shopify-section-{{ section.id }} .social-link-item--no-link:hover {
    transform: none;
    opacity: 1;
  }

  #shopify-section-{{ section.id }} .social-link-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
    #shopify-section-{{ section.id }} .social-link-item:hover {
    overflow: hidden;

    }
  #shopify-section-{{ section.id }} .social-link-item:hover .social-link-image {
    transform: scale(1.1);
  }

  #shopify-section-{{ section.id }} .social-link-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f0f0;
    border-radius: 4px;
  }

  #shopify-section-{{ section.id }} .social-placeholder {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  #shopify-section-{{ section.id }} .social-link-label {
    margin-top: 8px;
    font-size: 14px;
    font-weight: 500;
    color: #000000;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .social-links-empty {
    text-align: center;
    padding: 40px 20px;
    color: #666;
  }
   @media (max-width: 999px) {
        #shopify-section-{{ section.id }} .social-link-item {
            width: 50%;
            height: 50%;
        }
  }
  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .social-links-wrapper {
      padding: 40px 15px;
    }

    #shopify-section-{{ section.id }} .social-links-heading {
      font-size: 24px;
      margin-bottom: 20px;
    }

    #shopify-section-{{ section.id }} .social-link-label {
      font-size: 12px;
    }
  }

  @media (max-width: 999px) {

  }

  @media (max-width: 480px) {
    #shopify-section-{{ section.id }} .social-links-heading {
      font-size: 20px;
    }
  }
{% endstyle %}

