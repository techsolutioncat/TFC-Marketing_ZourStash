      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "link_image",
          "label": "Icon image",
          "info": "Upload social media icon (recommended: square icon, transparent background)"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL",
          "info": "Enter the social media profile URL"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link label",
          "info": "Optional label below the icon (e.g., 'Facebook', 'Instagram')"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Links",
      "blocks": [
        {
          "type": "social_link",
          "settings": {
            "link_label": "Facebook"
          }
        },
        {
          "type": "social_link",
          "settings": {
            "link_label": "Instagram"
          }
        },
        {
          "type": "social_link",
          "settings": {
            "link_label": "Twitter"
          }
        },
        {
          "type": "social_link",
          "settings": {
            "link_label": "YouTube"
          }
        }
      ]
    }
  ]
