<!-- Swiper -->
<div class="main-hero-slide-wrapper{% if section.settings.fullscreen == false %} section{% endif %}{% if section.settings.fullscreen %} main-hero-slide-wrapper--fullscreen{% endif %}">
    <div class="swiper main-hero-swiper{% if section.settings.fullscreen %} main-hero-swiper--fullscreen{% endif %}" {{ section.shopify_attributes }}>
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
        {% if block.type == 'image' and block.settings.image != blank %}
            <div class="swiper-slide" {{ block.shopify_attributes }}>
            {{
                block.settings.image
                | image_url: width: 1920
                | image_tag: loading: 'lazy', class: 'swiper-slide__image', alt: block.settings.image.alt | default: 'Hero slide'
            }}
            {% if block.settings.heading != blank or block.settings.text != blank or block.settings.button_label != blank %}
                <div class="swiper-slide__content">
                {% if block.settings.heading != blank %}
                    <h2 class="swiper-slide__heading"{% if block.settings.heading_color != blank %} style="color: {{ block.settings.heading_color }};"{% endif %}>{{ block.settings.heading }}</h2>
                {% endif %}
                {% if block.settings.text != blank %}
                    <p class="swiper-slide__text"{% if block.settings.text_color != blank %} style="color: {{ block.settings.text_color }};"{% endif %}>{{ block.settings.text }}</p>
                {% endif %}
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                    <a href="{{ block.settings.button_link }}" class="swiper-slide__button"{% if block.settings.button_text_color != blank or block.settings.button_background_color != blank or block.settings.button_border_radius != blank or block.settings.button_padding_top != blank or block.settings.button_padding_bottom != blank or block.settings.button_padding_left != blank or block.settings.button_padding_right != blank or block.settings.button_hover_background_color != blank %} style="{% if block.settings.button_text_color != blank %}color: {{ block.settings.button_text_color }};{% endif %}{% if block.settings.button_background_color != blank %}background-color: {{ block.settings.button_background_color }};{% endif %}{% if block.settings.button_border_radius != blank %}border-radius: {{ block.settings.button_border_radius }}px;{% endif %}{% if block.settings.button_padding_top != blank or block.settings.button_padding_bottom != blank or block.settings.button_padding_left != blank or block.settings.button_padding_right != blank %}padding: {{ block.settings.button_padding_top | default: 12 }}px {{ block.settings.button_padding_right | default: 24 }}px {{ block.settings.button_padding_bottom | default: 12 }}px {{ block.settings.button_padding_left | default: 24 }}px;{% endif %}{% if block.settings.button_hover_background_color != blank %}--button-hover-bg: {{ block.settings.button_hover_background_color }};{% endif %}"{% endif %}>
                    {{ block.settings.button_label }}
                    </a>
                {% endif %}
                </div>
            {% endif %}
            </div>
        {% endif %}
        {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
    </div>
</div>

{% stylesheet %}
  #shopify-section-{{ section.id }} .main-hero-slide-wrapper {
    width: 100%;
    position: relative;
    height: 450px;
  }

      #shopify-section-{{ section.id }} .main-hero-slide-wrapper--fullscreen {
        height: 600px;
    }

  #shopify-section-{{ section.id }} .main-hero-swiper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  #shopify-section-{{ section.id }} .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  #shopify-section-{{ section.id }} .swiper-slide__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  #shopify-section-{{ section.id }} .swiper-slide__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
    text-align: center;
    color: #fff;
    max-width: 90%;
  }

  #shopify-section-{{ section.id }} .swiper-slide__heading {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  #shopify-section-{{ section.id }} .swiper-slide__text {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }

  #shopify-section-{{ section.id }} .swiper-slide__button {
    display: inline-block;
    padding: 12px 24px;
    background-color: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  #shopify-section-{{ section.id }} .swiper-slide__button:hover {
    background-color: var(--button-hover-bg, #333);
  }

    #shopify-section-{{ section.id }} .main-hero-slide-wrapper--fullscreen {
        height: 600px;
    }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} .swiper-slide__heading {
      font-size: 1.75rem;
    }

    #shopify-section-{{ section.id }} .swiper-slide__text {
      font-size: 1rem;
    }

    #shopify-section-{{ section.id }} .main-hero-slide-wrapper {
        height: 350px;
    }

    #shopify-section-{{ section.id }} .main-hero-slide-wrapper--fullscreen {
        height: 450px;
    }
  }

  @media (max-width: 599px) {

    #shopify-section-{{ section.id }} .main-hero-slide-wrapper {
        height: 270px;
    }

    #shopify-section-{{ section.id }} .main-hero-slide-wrapper--fullscreen {
        height: 300px;
    }
  }
{% endstylesheet %}

<!-- Initialize Swiper -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var swiperConfig = {
      slidesPerView: 1,
      spaceBetween: 0,
      loop: true,
      pagination: {
        el: '#shopify-section-{{ section.id }} .swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '#shopify-section-{{ section.id }} .swiper-button-next',
        prevEl: '#shopify-section-{{ section.id }} .swiper-button-prev',
      },
    };

    {% if section.settings.autoplay %}
      swiperConfig.autoplay = {
        delay: {{ section.settings.autoplay_delay | default: 3000 }},
        disableOnInteraction: false,
      };
    {% endif %}

    var swiper = new Swiper('#shopify-section-{{ section.id }} .main-hero-swiper', swiperConfig);
  });
</script>

